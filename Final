    }
    
    
//If statement for question 3 (Scene 5)
    //Wrong answer
    if( (mouseX > 75 && mouseX < 276 && mouseY > 203 && mouseY < 229) && (currentScene === 5) && !answeredQuestion){
        answeredQuestion = true;
        fill(255, 0, 0);
        ellipse(85,218,12,12);
